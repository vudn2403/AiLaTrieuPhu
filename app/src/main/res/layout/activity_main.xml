<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thí sinh"/>
        <ProgressBar
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150000000"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_ailatrieuphu"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/nonColorPrimary"/>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:id="@+id/lnl_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/ic_launcher"/>

        </LinearLayout>

        <TextView
            android:layout_below="@id/txt_level"
            android:id="@+id/txt_question"
            style="@style/Question"
            android:layout_marginTop="-16dp"/>

        <TextView
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/lnl_help"
            android:id="@+id/txt_level"
            android:layout_width="144dp"
            android:layout_height="32dp"
            android:textAlignment="center"
            android:text="Câu 1"
            android:background="@android:color/white"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_below="@id/txt_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:padding="32dp">

            <Button
                android:id="@+id/btn_case_a"
                style="@style/ButtonAnswer" />

            <Button
                android:id="@+id/btn_case_b"
                style="@style/ButtonAnswer" />

            <Button
                android:id="@+id/btn_case_c"
                style="@style/ButtonAnswer" />

            <Button
                android:id="@+id/btn_case_d"
                style="@style/ButtonAnswer" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>