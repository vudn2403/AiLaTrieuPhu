<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ailatrieuphu"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:id="@+id/txt_level"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CÃ¢u 1"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:background="@drawable/bg_button_answer"/>

        <TextView
            android:id="@+id/txt_question"
            style="@style/Question" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_case_a"
                style="@style/ButtonAnswer" />

            <Button
                android:id="@+id/btn_case_b"
                style="@style/ButtonAnswer"
                android:layout_marginLeft="8dp" />
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_case_c"
                style="@style/ButtonAnswer" />

            <Button
                android:id="@+id/btn_case_d"
                style="@style/ButtonAnswer"
                android:layout_marginLeft="8dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>